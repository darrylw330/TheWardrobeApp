<div class="card mx-auto mt-5" style="width: 300px;">
  <div class="card-body">
    <h1 class="text-center mb-4">New Clothing</h1>

    <%= form_for @clothing do |f| %>
      <div class="form-group">
        <%= f.label :brand %>
        <%= f.text_field :brand, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :category_id %>
        <%= f.text_field :category_id, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :color %>
        <%= f.text_field :color, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :image %>
        <%= f.text_field :image, class: "form-control" %>
      </div>

      <div class="text-center">
        <%= f.submit "Create Clothing", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
