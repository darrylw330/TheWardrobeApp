<h1 class="text-center">List of all clothings</h1>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card">
        <div class="card-body">
          <h2 class="card-title text-center">Add a new clothing</h2>

          <%= form_with(url: "/insert_clothing", method: "post", local: true) do |form| %>
            <div class="form-group">
              <%= form.label :query_user_id, "User" %>
              <%= form.text_field :query_user_id, id: "user_id_box", class: "form-control" %>
            </div>

            <div class="form-group">
              <%= form.label :query_brand, "Brand" %>
              <%= form.text_field :query_brand, id: "brand_box", class: "form-control" %>
            </div>

            <div class="form-group">
              <%= form.label :query_color, "Color" %>
              <%= form.text_field :query_color, id: "color_box", class: "form-control" %>
            </div>

            <div class="form-group">
              <%= form.label :query_image, "Image" %>
              <%= form.text_field :query_image, id: "image_box", class: "form-control" %>
            </div>

            <div class="text-center">
              <%= form.submit "Create clothing", class: "btn btn-primary" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<hr>

<div>
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-8">
        <table class="table">
          <thead>
            <tr>
              <th>ID</th>
              <th>User</th>
              <th>Category</th>
              <th>Brand</th>
              <th>Color</th>
              <th>Image</th>
              <th>Created at</th>
              <th>Updated at</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @list_of_clothings.each do |a_clothing| %>
              <tr>
                <td><%= a_clothing.id %></td>
                <td><%= a_clothing.user_id %></td>
                <td><%= a_clothing.category&.name %></td>
                <td><%= a_clothing.brand %></td>
                <td><%= a_clothing.color %></td>
                <td><img src="<%= a_clothing.image %>" class="img-fluid"></td>
                <td><%= time_ago_in_words(a_clothing.created_at) %> ago</td>
                <td><%= time_ago_in_words(a_clothing.updated_at) %> ago</td>
                <td>
                  <a href="/clothings/<%= a_clothing.id %>">
                    Show details
                  </a>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

<hr>
