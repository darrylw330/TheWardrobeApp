<div>
  <div>
    <h1>List of all clothings</h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>Add a new clothing</h2>

    <%= form_with(url: "/insert_clothing", method: "post", local: true) do |form| %>
      <div>
        <%= form.label :query_user_id, "User" %>
        <%= form.text_field :query_user_id, id: "user_id_box" %>
      </div>

      <div>
        <%= form.label :query_brand, "Brand" %>
        <%= form.text_field :query_brand, id: "brand_box" %>
      </div>

      <div>
        <%= form.label :query_color, "Color" %>
        <%= form.text_field :query_color, id: "color_box" %>
      </div>

      <div>
        <%= form.label :query_image, "Image" %>
        <%= form.text_field :query_image, id: "image_box" %>
      </div>

      <div>
        <%= form.submit "Create clothing" %>
      </div>
    <% end %>
  </div>
</div>

<hr>

<div>
  <div>
    <table border="1">
      <tr>
        <th>ID</th>
        <th>User</th>
        <th>Category</th>
        <th>Brand</th>
        <th>Color</th>
        <th>Image</th>
        <th>Created at</th>
        <th>Updated at</th>
        <th></th>
      </tr>

      <% @list_of_clothings.each do |a_clothing| %>
        <tr>
          <td><%= a_clothing.id %></td>
          <td><%= a_clothing.user_id %></td>
          <td><%= a_clothing.category.name %></td>
          <td><%= a_clothing.brand %></td>
          <td><%= a_clothing.color %></td>
          <td><img src="<%= a_clothing.image %>" class="img-fluid"></td>
          <td><%= time_ago_in_words(a_clothing.created_at) %> ago</td>
          <td><%= time_ago_in_words(a_clothing.updated_at) %> ago</td>
          <td>
            <a href="/clothings/<%= a_clothing.id %>">
              Show details
            </a>
          </td>
        </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
